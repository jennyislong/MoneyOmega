<h1
    style="color: black; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
    Payment Reminder</h1>
<p style="font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">
    Current Date and Time is <span id='date-time'></span>.</p>
<script>
    var dt = new Date();
    document.getElementById('date-time').innerHTML = dt;
</script>


<div class="calendar">

    <div class="col leftCol">
        <div class="content">
            <h1 class="date">Add New Payment</h1>

            <div class="notes">
                <form method="post">
                    <p>
                        <input id="title" name="title" type="text" value="" placeholder="Enter payment title" />

                        <input id="date" name="date" type="date" value="" placeholder="Enter payment date" />
                        <input name="time" type="time" value="" placeholder="Enter payment time" />

                        <button name="save" value="Save" type="submit">Save Reminder</button>
                    </p>
                </form>

            </div>

        </div>
    </div>

    <div class="col leftCol">
        <div class="content">
            <h1 class="date">Upcoming Payments</h1>

            <div class="notes">
                <form method="post">
                    <ul style="color: white;">
                        {{#each notif}}
                        <li>{{this.title}} </li>
                        <li>{{this.date}} </li>
                        <li>{{this.time}} <button name="del" value="{{this.title}}" type="submit">Remove
                                Reminder</button></li>
                        <br>
                        {{/each}}

                    </ul>

                </form>
            </div>

        </div>
    </div>


    <div class="col rightCol">
        <div class="content">

            <h2 class="year">
                <script>document.write(new Date().getFullYear())</script>
            </h2>

            <ul class="months">
                <script>
