    <form class = "recommendForm" name="recommendForm">
        <h3> Please Select your Risk level</h3>
            <label for="low">Low</label>
            <input type="checkbox" name="risk" value="low">            
                        
            <label for="medium">medium</label>
            <input type="checkbox" name="risk" value="medium">            
            
            <label for="high">high</label>
            <input type="checkbox" name="risk" value="high">

            <!-- USERS CAN PICK SELECT either one option or two
                i.e. low risk, low to medium risks
            -->

        <h3> How long would you like to invest?</h3>
            <label for="short">Short term</label>
            <input type="radio" name="time" value="short">            
            
            <label for="medium">Medium term</label>
            <input type="radio" name="time" value="medium">            
            
            <label for="long">Long term</label>
            <input type="radio" name="time" value="long">
        
    <!-- DOUBLE CHECK AMOUNT-->
        <h3>How much would you like to invest?</h3>
                <select name="Amount" id="Amount" > 
                    <option value="low">0-1000</option>
                    <option value="mid">1000-5000</option>
                    <option value="high">5000-10000</option>
                    <option value="higher">10000+</option>
                </select>
    
        <h3>Select your Experience with Investing</h3>
                <select name="experience"> 
                    <option value="None">None</option>
                    <option value="Beginner">Beginner</option>
                    <option value="Experienced">Experienced</option>
                </select>
            <br>

        <div class="sub-button"> 
            <input class="input-button" type='submit' onclick='check();return false'>
            <button class="input-button" type="button" onclick='document.location.reload(true)'>Restart</button>
        </div>
        <!-- return false: after function to stop page from refreshing-->
    </form>

