  <style>
    #example1 {
      padding: 20px;
      background: #ffddab;
      margin-left: 230px;
      margin-right: 230px;
      margin-top: 40px;
      margin-bottom:40px;
      border: 2px solid  rgb(39, 38, 38); 
      border-radius:5px;
      box-shadow: 15px 15px 10px #729672;
    } 
    </style>
    </head>

  <title>Account Profile</title> 
<body style="background-color:darkseagreen;">

  <div class="topnav">
    <a class="active" href="/homePage">Home</a>
    <a href="/expense-tracker">Expense Tracker</a>
    <a href="/budget">Budget</a>
    <a href="/accountProfile">Account Profile</a>
    <a href="/payment-notif">Notifications</a>
    <a href="/BillTipSplitter">Bill + Tips Splitter</a>
    <a href="/recommendation">Recommendations</a>
    <a href="/Tutorial">Tutorials</a>
        <form method="post" action="logout">
        <input style="margin-top:15px;" type="submit" value="log out">
        </form>
</div>

<div id="example1">
<h1 class ="title">My Info</h1>
<img src="/images/user_profile_avatar.png" width="150" height="100"><br></br>

<script>
function hideDiv() {
  var x = document.getElementById("hideDiv");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}
</script>

<section class="get">
<button onclick="hideDiv()" href="/get-data">View Saved Profile</button>
<div id="hideDiv">
    <div class = "savedData">
        {{#each items}}
            <article class = "item">
                <div> <b>first name:</b> {{this.firstname}} </div>
                <div> <b>last name:</b> {{this.lastname}}</div>
                <div> <b>email:</b> {{this.email}}</div>

            </article>
        {{/each}}
    </div>
</section>
<br><br>

    <h1>Update Data</h1>
<section class="update">
    <form action="/update" method="post">
        <div class="input-field">
            <label for="firstname">First Name:</label>
            <input type="text" id="firstname" name="firstname"><br><br>
        </div>
        <div class="input-field">
            <label for="lastname">Last Name:</label>
            <input type="text" id="lastname" name="lastname"><br><br>
        </div>
        <div class="input-field">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email"><br><br>
        
        <div class="sub-button">            
            <input class="input-button" name="update" value="Update" type ="submit">
        </div>
    </form>
</section>

</body>
</html>